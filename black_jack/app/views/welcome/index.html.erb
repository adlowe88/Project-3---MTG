<div class="sign-in hidden">
  <%= form_for( :session, url: login_path, method: :post) do | f | %>
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input" %>
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %>
    <%= f.submit "Sign in", class: "submit" %>
  <% end  %>
</div>

<div class="create-account hidden">
  <%= form_for(:user, url: users_path, method: :post) do |f| %>
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "label" %>
    <%= f.label :email, class: "label" %>
    <%= f.text_field :email, class: "input" %>
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %>
    <%= f.submit "Create Account", class: "submit" %>
  <% end %>
</div>

<h1 class="banner">BlackJack: The Gathering</h1>
<div class="error"><%= flash[ :error ] %></div>
